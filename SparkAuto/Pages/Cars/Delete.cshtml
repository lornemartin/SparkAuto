@page
@model SparkAuto.Pages.Cars.DeleteModel
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

    <h2 class="text-info pt-2 pb-3">Delete Car</h2>

    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <input type="hidden" asp-for="Car.Id" />
                <input type="hidden" asp-for="Car.UserId" />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-4">
                            <label asp-for="Car.VIN"></label>
                        </div>
                        <div class="col-8">
                            <input asp-for="Car.VIN" class="form-control" disabled="disabled"/>
                        </div>
                        <span asp-validation-for="Car.VIN" class="text-danger"></span>
                    </div>
                    <div class="row">
                        <div class="col-4">
                            <label asp-for="Car.Make"></label>
                        </div>
                        <div class="col-8">
                            <input asp-for="Car.Make" class="form-control" disabled="disabled"/>
                        </div>
                        <span asp-validation-for="Car.Make" class="text-danger"></span>
                    </div>
                    <div class="row">
                        <div class="col-4">
                            <label asp-for="Car.Model"></label>
                        </div>
                        <div class="col-8">
                            <input asp-for="Car.Model" class="form-control" disabled="disabled"/>
                        </div>
                        <span asp-validation-for="Car.Model" class="text-danger"></span>
                    </div>
                    <div class="row">
                        <div class="col-4">
                            <label asp-for="Car.Style"></label>
                        </div>
                        <div class="col-8">
                            <input asp-for="Car.Style" class="form-control" disabled="disabled"/>
                        </div>
                        <span asp-validation-for="Car.Style" class="text-danger"></span>
                    </div>
                    <div class="row">
                        <div class="col-4">
                            <label asp-for="Car.Year"></label>
                        </div>
                        <div class="col-8">
                            <input asp-for="Car.Year" class="form-control" disabled="disabled"/>
                        </div>
                        <span asp-validation-for="Car.Year" class="text-danger"></span>
                    </div>
                    <div class="row">
                        <div class="col-4">
                            <label asp-for="Car.Miles"></label>
                        </div>
                        <div class="col-8">
                            <input asp-for="Car.Miles" class="form-control" disabled="disabled"/>
                        </div>
                        <span asp-validation-for="Car.Miles" class="text-danger"></span>
                    </div>
                    <div class="row">
                        <div class="col-4">
                            <label asp-for="Car.Color"></label>
                        </div>
                        <div class="col-8">
                            <input asp-for="Car.Color" class="form-control" disabled="disabled"/>
                        </div>
                        <span asp-validation-for="Car.Color" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-6">
                        <input type="hidden" asp-for="Car.Id" />
                        <input type="submit" class="btn btn-danger form-control" value="Delete" />
                    </div>
                    <div class="col-6">
                        <a asp-page="Index" asp-route-userId="@Model.Car.UserId" class="btn btn-success form-control">Back To List</a>
                    </div>
                </div>
            </form>
        </div>
    </div>

